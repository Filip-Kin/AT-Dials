{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "baseUrl": "."
    },
    "include": [
        "src"
    ]
}